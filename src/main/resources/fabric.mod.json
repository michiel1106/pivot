{
	"schemaVersion": 1,
	"id": "pivot",
	"version": "${version}",
	"name": "Pivot",
	"description": "A survival-friendly all-in-one display entity editor that allows people to edit display entities ingame, also allows people who dont have the mod to join the server.",
	"authors": [
		"Bikerboys"
	],
	"contact": {
		"sources": "https://github.com/michiel1106/pivot-1.21.8"
	},
	"license": "MIT",
	"icon": "assets/pivot/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"bikerboys.pivot.Pivot"
		],
		"client": [
			"bikerboys.pivot.PivotClient"
		]
	},
	"mixins": [
		"pivot.mixins.json",
		{
			"config": "pivot.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.16.2",
		"minecraft": "~1.21.7",
		"java": ">=21",
		"fabric-api": "*"
	},
	"suggests": {
		"another-mod": "*"
	}
}